{% extends 'base.html.twig' %}

{% block title %}All post{% endblock %}

{% block body %}

        <div class="row">
            {% for post in  posts %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> <a href="{{ path("show_post", {'id': post.id}) }}">{{ post.title }}</a></h5>
                            <h5 class="p-3">{{ post.content }}</h5>
                            <a href="{{ path('show_post', {'id': post.id}) }}" class="btn btn-primary">Read more</a>

                            <div class="card-footer">
                                <small class="text-muted">{{ post.createdAt | date("d/m/Y : H:i") }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>


{% endblock %}
